        double total ;
        
        int myRate = Integer.parseInt(Rate.getText());
        double myTax = Double.parseDouble(Tax.getText());       
        total = myRate + (myRate/myTax);
        
        
        Connection connection = null;
        Statement stmt = null;
        try
        {
            Class.forName("com.mysql.jdbc.Driver");
            connection = DriverManager
                .getConnection("jdbc:mysql://localhost/BillingData", "root","");
             
            stmt = connection.createStatement();
            stmt.execute("INSERT INTO Invoice (BilledTo,BilledAddress, Duedate, InvoiceNumber, PayMethod  ) "
                                + "VALUES ('"+BilledTo.getText()+"', '"+BilledAddress.getText()+"', '"+Duedate.getText()+"', '"+InvoiceNumber.getText()+"', '"+PayMethod.getSelectedItem()+"' )");
            
           
            
           
            String result = "Data Inserted ";
            MyProcess.setText(result);
            
        } 
        catch (Exception e) {
            e.printStackTrace();
        }finally {
            try {
                stmt.close();
                connection.close();
            } catch (Exception e) {
                e.printStackTrace();
            }
        }
        
        
    }                                             

